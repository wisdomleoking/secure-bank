# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (For production, use external database service)
# SQLite is NOT recommended for Vercel production
# Consider using PostgreSQL, MySQL, or MongoDB with cloud hosting
DB_HOST=localhost
DB_PORT=5432
DB_NAME=securebank
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://your-vercel-app.vercel.app

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@securebank.com

# AI Configuration (Optional)
AI_API_KEY=your_ai_service_api_key
